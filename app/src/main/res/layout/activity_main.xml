<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:screenOrientation="portrait" >


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/wire_your_word"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="172dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/max_of_words" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText"
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_weight="0.5"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:textColorHighlight="#DC5886"
                    android:textColorLink="#FA0057"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/okButton"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_marginStart="20dp"
                    android:onClick="enterTheWord"
                    android:text="@string/ok"
                    android:textColorHighlight="#DC5886"
                    android:textColorLink="#FA0057"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/fivelettersblock_1"
                    layout="@layout/fiveletters"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="40dp" />

                <include
                    android:id="@+id/fivelettersblock_2"
                    layout="@layout/fiveletters"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <include
                    android:id="@+id/fivelettersblock_3"
                    layout="@layout/fiveletters"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <include
                    android:id="@+id/fivelettersblock_4"
                    layout="@layout/fiveletters"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <include
                    android:id="@+id/fivelettersblock_5"
                    layout="@layout/fiveletters"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <include
                    android:id="@+id/fivelettersblock_6"
                    layout="@layout/fiveletters"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <Button
                    android:id="@+id/newGameBtn"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:insetTop="6dp"
                    android:insetRight="0dp"
                    android:onClick="newGame"
                    android:text="@string/new_game"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>